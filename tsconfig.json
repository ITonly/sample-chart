{
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    },
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "removeComments": true
    },
    "types": [
        "lodash",
        "cryptojs"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}